general {
        colors = true
        interval = 1
}

order += "wireless _first_"
order += "ethernet _first_"
order += "memory"
order += "cpu_usage"
order += "battery all"
order += "disk /"
order += "tztime local"
order += "volume master"


wireless _first_ {
        format_up = "ðŸ“¡- %essid %frequency %ip"
        format_down = "W:"
}

ethernet _first_ {
        format_up = "E: %ip (%speed)"
        format_down = ""
}

cpu_usage {
	format = "%usage: %cpu0%cpu1%cpu2%cpu3%cpu4%cpu5%cpu6%cpu7%cpu8%cpu9%cpu10%cpu11%cpu12%cpu13%cpu14%cpu15"
	max_threshold = 30
	degraded_threshold = 5
}

battery all {
        format = "ðŸ”‹%percentage %remaining "
	#status_chr:'âš¡'
	#status_bat:ðŸ”‹
	#low_threshold: 30
}

disk "/" {
        format = "%avail"
}

load {
        format = "%1min"
}

memory {
        format = "%used"
	threshold_critical = 60%
	threshold_degraded = 85%
}

tztime local {
        format = "%H:%M %d-%m"
}

volume master {
        format = "â™ª: %volume"
        format_muted = "â™ª: muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}
